<Window x:Class="sessio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sessio1"
        mc:Ignorable="d"
        Title="Creació Nom" Height="600" Width="525">
    <StackPanel>
        <Label Content="Nom"></Label>
        <TextBox Width="529" Height="30" Text="{Binding Path=nom, Mode=TwoWay}"></TextBox>
        <Label Content="Cognom"></Label>
        <TextBox Width="529" Height="30" Text="{Binding Path=cognom, Mode=TwoWay}" TextChanged="TextBox_TextChanged"></TextBox>
        <Label Content="Nom Complet"></Label>
        <TextBox Width="529" Height="30" Text="{Binding Path=nom_complet, Mode=TwoWay}"></TextBox>

    </StackPanel>
</Window>
